# Postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=worksmarter

# Backend
DATABASE_URL=postgres://postgres:postgres@db:5432/worksmarter
VITE_DATABASE_URL=postgres://postgres:postgres@db:5432/worksmarter

# Frontend
VITE_API_URL=http://localhost:8000

# OpenAI Configuration (Standard OpenAI)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4

# Azure OpenAI Configuration (Alternative to Standard OpenAI)
# If these are set, they take precedence over standard OpenAI
# Get credentials from Azure Portal > Azure OpenAI Service
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-key-here
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT=gpt-4

# Note: Only one set of credentials (OpenAI OR Azure OpenAI) is required
# Azure credentials will be used if present, otherwise falls back to OpenAI 